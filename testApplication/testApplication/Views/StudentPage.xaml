            </Grid>

            <Grid x:Name="StudentPageImageGrid" VerticalAlignment="Bottom" Margin="280,0,270,80" Height="192">
                <Image Source="/Assets/StudentPageImage.jpg" Margin="0,14,-1,-14"/>
            </Grid>

        </Grid>





